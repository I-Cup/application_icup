<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color">



    <!-- le contenu de ces fragments va etre remplacer
     par le contenu de fragments encodés dans les fichiers xml contenus
     dans le package "fragments"
     Cette injection est réalisée dans MainActivity.kt -->

    <!-- layout contenant la top bar -->
    <FrameLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_taskbar_size"
        android:background="@color/background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- layout contenant le graph (?) -->
    <FrameLayout
        android:id="@+id/graph_container"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_container" />

    <!-- layout contenant la liste des chronos -->
    <FrameLayout
        android:id="@+id/chrono_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bar_color"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graph_container"
        android:layout_marginTop="291dp"
        android:layout_marginBottom="@dimen/default_taskbar_size" />


    <!-- layout contenant la task bar -->
    <FrameLayout
        android:id="@+id/bottom_bar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_taskbar_size"
        android:background="@color/background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="ch"/>




</androidx.constraintlayout.widget.ConstraintLayout>
